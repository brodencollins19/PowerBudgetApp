<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_input_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorWhite"
    tools:context="com.example.bcoll.powerbudgetapp.inputUserInfo">

    <TextView
        android:text="Total Budget"
        android:textColor="@color/colorBlack"
        android:layout_width="100dp"
        android:layout_marginTop="14dp"
        android:id="@+id/totalBudgetView"
        tools:text="Total Budget"
        android:layout_height="50dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    android:background="@color/colorPrimaryDark"

    <TextView
        android:text="Container: Food"
        android:textColor="@color/colorBlack"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="29dp"
        android:id="@+id/FoodView"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/TotalBudgetField"
        android:layout_alignStart="@+id/RentView"
        tools:text="Food" />

    <TextView
        android:text="Rent"
        android:textColor="@color/colorBlack"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/RentView"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/FoodField"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="Entertainment"
        android:textColor="@color/colorBlack"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/EntertainmentView"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/RentField"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:textColor="@color/colorBlack"
        android:background="@color/colorGreen"
        android:id="@+id/EntertainmentField"
        android:layout_alignTop="@+id/EntertainmentView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp"
        android:text="0" />


    <Button
        android:text="Back to Dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/NewBudget"
        android:id="@+id/InfoDashButton"
        android:layout_alignBottom="@+id/UpdateBudget"
        android:layout_toStartOf="@+id/UpdateBudget" />

    <Button
        android:text=" Update Budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UpdateBudget"
        android:layout_alignBottom="@+id/NewBudget"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/NewBudget" />

    <Button
        android:text="New Budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:id="@+id/NewBudget"
        android:layout_below="@+id/EntertainmentField"
        android:layout_toEndOf="@+id/UpdateBudget" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:background="@color/colorGreen"
        android:id="@+id/TotalBudgetField"
        android:layout_alignBottom="@+id/totalBudgetView"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorBlack"
        tools:text="0"
        android:text="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:background="@color/colorGreen"
        android:textColor="@color/colorBlack"
        android:id="@+id/FoodField"
        android:layout_alignBottom="@+id/FoodView"
        android:layout_alignParentStart="true"
        android:text="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:background="@color/colorGreen"
        android:textColor="@color/colorBlack"
        android:id="@+id/RentField"
        android:text="0"
        android:layout_alignBottom="@+id/RentView"
        android:layout_alignParentStart="true" />
</RelativeLayout>
